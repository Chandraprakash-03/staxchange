{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"module": "CommonJS",
		"target": "ES2020",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": false,
		"sourceMap": true
	},
	"include": [
		"src/worker.ts",
		"src/services/**/*",
		"src/agents/**/*",
		"src/lib/**/*",
		"src/utils/**/*",
		"src/models/**/*",
		"src/repositories/**/*",
		"src/types/**/*",
		"src/config/**/*"
	],
	"exclude": [
		"src/app/**/*",
		"src/components/**/*",
		"src/hooks/**/*",
		"src/test/**/*",
		"node_modules",
		".next",
		"dist"
	]
}
